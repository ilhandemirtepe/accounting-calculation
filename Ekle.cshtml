@model CiroHesaplama.Models.Admin1

@{
    ViewBag.Title = "Ekle";

}
<style type="text/css">
    .tr{
        width:90px;
    }
</style>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="panel panel-warning">
                    <!-- Default panel contents -->
                    <div class="panel-heading" style="background-color:#ff6a00;text-align:center;color:#000000">Merkez  </div>
                    <div class="panel-heading" style="background-color:#ff6a00;color:#000000">>>>> Admin Ekleme İşlemi </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="panel-body" style="color:#000000">
                            <div class="col-md-12" style="background-color:#ff6a00">
                                <div class="col-md-1"></div>
                                <div class="col-md-10">
                                
                                        <div class="form-horizontal" style="margin-top:20px">
                                            <div class="form-group">
                                                <label class="control-label col-sm-4 ">Şube seçiniz:</label>
                                                <div class="col-sm-6">
                                                    @Html.DropDownList("rollerim", null, "----şube seçiniz---", new { @class = "form-control", required = "", })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-4 ">Kullanıcı Adı:</label>
                                                <div class="col-sm-6">
                                                    @Html.TextArea("txtKullaniciAdimiz", null, new { @class = "form-control", required = "" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-4 ">Şifre:</label>
                                                <div class="col-sm-6">
                                                    @Html.TextArea("txtSifre", null, new { @class = "form-control", required = "" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-4 "></label>
                                                <div class="col-sm-6"> </div>

                                                <div class="col-sm-6">
                                                    <input type="submit" value="Kaydet" class="btn  btn-primary" style="color:#000000" />

                                                </div>
                                            </div>
                                            <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
                                            <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
                                            <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

                                        </div>
                                  
                                </div>
                                <div class="col-md-2"></div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
