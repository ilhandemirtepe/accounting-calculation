@using PagedList;
@using PagedList.Mvc;

@model IPagedList<CiroHesaplama.Models.DIO.AdminHelperim>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";

}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>
    .my-style {
        outline: none;
        border: none;
    }
    .gizle{
        display:none;
    }
</style>
<div class="container">
    <div class="panel panel-warning">
        <!-- Default panel contents -->
        <div class="panel-heading" style="background-color:#ff6a00;text-align:center;color:#000000">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-2"> </div>
                    <div class="col-md-9 text-center" style="font-family:'Segoe Script';font-weight:bolder"> <h4>Merkez</h4> </div>

                    <div class="col-md-1 text-center">
                        @Html.ActionLink("Çıkış Yap", "LogOut", "Login", new { @class = "btn btn-primary" })


                    </div>
                </div>
            </div>
        </div>
        <div class="panel-heading" style="background-color:#ff6a00;color:#000000">>>>> LİSTELEME İŞLEMİ </div>
        <div class="panel-body" style="color:#000000">
            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("AnaSayfa", "Merkez")'">
                Anasayfaya Git
            </button>
            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Ekle", "AdminCRUD")'">
                Yeni Admin Ekle
            </button>
            
            
        </div>
    </div>
    <div class="col-md-7">
        <table class="table table-striped table-bordered">
            <tr>

                <th width="30%" style="text-align:center">
                    Şube Adı
                </th>
                <th width="30%" style="text-align:center">
                    Kullanıcı Adı
                </th>
                <th width="30%" style="text-align:center">
                    Şifre
                </th>
                <th width="10%" style="text-align:center">
                    Sil
                </th>

            </tr>

            @foreach (var item in Model)
        {
                <tr style="text-align:center">
                    <td class="gizle">
                        @Html.DisplayFor(modelItem => item.AdminidNumberViewModel)
                    </td>
                    <td width="30%" style="text-align:center">
                        @Html.DisplayFor(modelItem => item.AdminKategoriNameViewModel)
                    </td>

                    <td width="30%" style="text-align:center">
                        @Html.DisplayFor(modelItem => item.AdminUserNameViewModel)
                    </td>
                    <td width="30%" style="text-align:center">
                        @Html.DisplayFor(modelItem => item.AdminPassWordViewModel)
                    </td>
                    <td width="10%" style="text-align:center">


                        @Html.ActionLink("Sil", "Sil", new { id = item.AdminidNumberViewModel })
                    </td>
                </tr>
        }

        </table>
    </div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>


