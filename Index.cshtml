@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Login/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Login/css/styles.css" rel="stylesheet" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>Login</title>
    <meta name="generator" content="Bootply" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @*<script>
    $(document).ready(function () {
        $("#hatam").css("display", "none");
    });
    </script>*@
</head>
<body>
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="modal-header text-center">
                    <img style="width:380px;height:150px" src="~/Content/AdminLogin/lion.jpg" />

                    <div class="form col-md-12 center-block">
                        <div class="form-group">

                        </div>
                        <div class="form-group">

                            @Html.TextBox("ka", null, new { @class = "form-control input-lg", required = "", placeholder = "kullanıcı adınızı giriniz" })
                        </div>
                        <div class="form-group">
                            @Html.Password("pa", null, new { @class = "form-control input-lg", required = "", placeholder = "şifrenizi giriniz" })
                        </div>
                        <div class="form-group">

                            <button style="color:#000000;background-color:#ff6a00" class="btn  btn-lg btn-block" data-dismiss="modal" aria-hidden="true">Giriş Yap</button>
                         
                           
                                <span class="alert alert-danger" style="display:none" role="dialog">
                                    @if (ViewData["Message"] != null)
                                    {
                                        <script language="javascript">
                                            alert('@ViewData["Message"]');
                                        </script>
                                    }
                                </span>

                       

                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="~/Content/Login/js/bootstrap.min.js"></script>
</body>
</html>
